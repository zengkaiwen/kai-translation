{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "kai",
    "version": "0.0.4"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "scope": [
          "https://translate.alibaba.com/api/*",
          "https://fanyi.qq.com/api/*",
          "https://translate.volcengine.com/*",
          "https://www2.deepl.com/*"
        ]
      },
      "shell": {
        "open": true
      },
      "window": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "clipboard": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPCONFIG/**"]
      },
      "path": {
        "all": true
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.kai-tools.fy",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/256x256.png", "icons/icon.icns", "icons/icon.ico"],
      "externalBin": [],
      "resources": [],
      "macOS": {
        "minimumSystemVersion": "10.13"
      }
    },
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "kai",
        "width": 420,
        "height": 276,
        "skipTaskbar": true,
        "transparent": true,
        "alwaysOnTop": true,
        "decorations": false,
        "visible": false,
        "focus": true,
        "hiddenTitle": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/system.png",
      "iconAsTemplate": true
    }
  }
}
