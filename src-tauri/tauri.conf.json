{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "zeus",
    "version": "0.0.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "sidecar": true,
        "scope": [{ "name": "binaries/autocopy", "sidecar": true }],
        "open": true
      },
      "window": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "clipboard": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPCONFIG/**"]
      },
      "path": {
        "all": true
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "top.kevin-zeus.zeus",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "externalBin": ["binaries/autocopy"],
      "resources": []
    },
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "zeus",
        "width": 420,
        "height": 276,
        "skipTaskbar": true,
        "transparent": true,
        "alwaysOnTop": true,
        "decorations": false,
        "visible": false,
        "focus": true,
        "hiddenTitle": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/128x128@2x.png",
      "iconAsTemplate": true
    }
  }
}
